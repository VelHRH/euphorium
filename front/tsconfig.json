{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "$modules/*": ["./src/modules/*"],
      "$config": ["./src/config/index"],
      "$config/*": ["./src/config/*"],
      "$api": ["./src/modules/api/index"],
      "$api/*": ["./src/modules/api/*"],
      "$constants": ["./src/modules/constants/index"],
      "$constants/*": ["./src/modules/constants/*"],
      "$components": ["./src/modules/components/index"],
      "$components/*": ["./src/modules/components/*"],
      "$lib": ["./src/modules/lib/index"],
      "$lib/*": ["./src/modules/lib/*"],
      "$middlewares": ["./src/modules/middlewares/index"],
      "$middlewares/*": ["./src/modules/middlewares/*"],
      "$validation": ["./src/modules/validation/index"],
      "$validation/*": ["./src/modules/validation/*"],
      "$graphql": ["./src/modules/graphql/index"],
      "$graphql/*": ["./src/modules/graphql/*"],
      "$pages": ["./src/modules/pages/index"],
      "$pages/*": ["./src/modules/pages/*"],
      "$providers": ["src/modules/components/providers/index"],
      "$providers/*": ["src/modules/components/providers/*"],
      "$store": ["./src/modules/store/index"],
      "$store/*": ["./src/modules/store/*"],
      "$theme": ["./src/modules/theme/index"],
      "$theme/*": ["./src/modules/theme/*"],
      "$/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
